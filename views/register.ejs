<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASFI - Register</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            600: '#7e22ce',
                            700: '#6b21a8',
                        },
                        asfi: {
                            purple: '#6b21a8',
                            light: '#f2f4f7'
                        }
                    },
                    fontFamily: {
                        poppins: ['Poppins', 'ui-sans-serif', 'system-ui', 'sans-serif'],
                    },
                }
            }
        }
    </script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Favicon -->
    <link rel="shortcut icon" href="/files/images/ASFIScholar_Logo.png" type="image/x-icon">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f2f4f7;
        }
        
        .circle {
            position: fixed;
            border-radius: 50%;
            background: rgba(107, 33, 168, 0.1);
            z-index: -1;
        }
        
        .top-circle {
            width: 600px;
            height: 600px;
            top: -300px;
            right: -200px;
        }
        
        .bottom-circle {
            width: 800px;
            height: 800px;
            bottom: -400px;
            left: -300px;
        }
        
        .show-password {
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .show-password:hover {
            color: #7e22ce;
        }
    </style>
</head>
<body class="min-h-screen overflow-y-auto">
    <!-- Header -->
    <header class="bg-white shadow-sm">
        <nav class="container mx-auto px-4 py-3 flex justify-between items-center">
            <!-- Logo -->
            <a class="flex items-center" href="/home">
                <img class="h-10" src="/files/images/ASFIScholar_Logo.png" alt="ASFI Scholar Logo">
            </a>
            
            <!-- Become Instructor Button -->
            <a href="/becomeInstructor" class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-md transition-colors">
                Become Instructor
            </a>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <!-- Messages Container -->
        <div class="max-w-lg mx-auto mb-6 space-y-3">
            <div id="error" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert"></div>
            <div id="success" class="hidden bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert"></div>
        </div>

        <!-- Purple Circles Background -->
        <div class="circle top-circle"></div>
        <div class="circle bottom-circle"></div>

        <!-- Registration Card -->
        <div class="max-w-lg mx-auto bg-white rounded-xl shadow-md overflow-hidden p-8">
            <div class="text-center mb-8">
                <img src="/files/images/ASFIScholar_Logo.png" alt="ASFI Logo" class="h-16 mx-auto mb-4">
                <h1 class="text-2xl font-bold text-gray-800 mb-2">Welcome ðŸ‘‹! Sign up.</h1>
                <p class="text-gray-600">Create your ASFI Scholar account</p>
            </div>

            <!-- Registration Form -->
            <form onsubmit="return false" method="post" id="form" class="space-y-4">
                <!-- First Name -->
                <div>
                    <label for="firstname" class="block text-sm font-medium text-gray-700 mb-1">Firstname *</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-user text-gray-400"></i>
                        </div>
                        <input type="text" id="firstname" name="firstname" autocomplete="off" required
                            class="w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                            placeholder="Firstname">
                    </div>
                </div>

                <!-- Last Name -->
                <div>
                    <label for="lastname" class="block text-sm font-medium text-gray-700 mb-1">Lastname *</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-user text-gray-400"></i>
                        </div>
                        <input type="text" id="lastname" name="lastname" autocomplete="off" required
                            class="w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                            placeholder="Lastname">
                    </div>
                </div>

                <!-- Username -->
                <div>
                    <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Username *</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-user text-gray-400"></i>
                        </div>
                        <input type="text" id="username" name="username" autocomplete="off" required
                            class="w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                            placeholder="Username">
                    </div>
                </div>

                <!-- Email -->
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-envelope text-gray-400"></i>
                        </div>
                        <input type="email" id="email" name="email" autocomplete="off" required
                            class="w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                            placeholder="Email">
                    </div>
                </div>

                <!-- Password -->
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password *</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-400"></i>
                        </div>
                        <input type="password" id="password" name="password" autocomplete="off" required
                            class="w-full pl-10 pr-10 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-transparent pass"
                            placeholder="Password">
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <i class="fas fa-eye text-gray-400 show-password" onclick="show_pass()"></i>
                        </div>
                    </div>
                </div>

                <!-- Terms Checkbox -->
                <div class="flex items-center">
                    <input id="terms-checkbox" type="checkbox" class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded">
                    <label for="terms-checkbox" class="ml-2 block text-sm text-gray-700">
                        By signing up, you agree to the <a href="#" class="text-purple-600 hover:text-purple-800">terms of service</a>
                    </label>
                </div>

                <!-- Submit Button -->
                <div class="pt-2">
                    <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-3 px-4 rounded-lg transition-colors">
                        Sign Up
                    </button>
                </div>
            </form>

            <!-- Login Link -->
            <div class="mt-6 text-center text-sm text-gray-600">
                <span>Already with us? <a href="/login" class="text-purple-600 hover:text-purple-800 font-medium">Login</a></span>
            </div>
        </div>
    </main>

    <!-- Scripts -->
    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/register.js"></script>
    <script src="/js/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Show/hide password
        function show_pass() {
            const passwordField = document.querySelector('.pass');
            const icon = document.querySelector('.show-password');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            const loader = document.getElementById('custom-loader');
            if (loader) {
                setTimeout(() => {
                    loader.classList.add('hide');
                }, 500);
            }
        });
    </script>
</body>
</html>