/* overlay & centering */
.share-modal__overlay {
  display: none;
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.5);
  z-index: 9999999;
  align-items: center;
  justify-content: center;
}
/* modal box */
.share-modal {
  background: var(--bs-bg-header);
  width: 50%;
  border-radius: 8px;
  overflow: hidden;
  color: #e4e6eb;
  font-family: Arial, sans-serif;
}
/* header */
.share-modal__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  border-bottom: 1px solid #8a8a8a;
}
.share-modal__title {
  margin: 0;
  font-size: 18px;
}
.share-modal__close {
  background: none;
  border: none;
  color: #aaa;
  font-size: 20px;
  cursor: pointer;
}
.share-modal__close:hover {
  color: rgb(243, 37, 37);
}
/* body & grid */
.share-modal__body {
  padding: 16px;
}
.share-modal__grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 12px;
}
/* icon buttons */
