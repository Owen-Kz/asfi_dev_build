<script>
	function showContent(tabName) {
		document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
		event.target.classList.add('active');

		switch (tabName) {
			case "ASFI":
			document.querySelector(".halloffame").style.display = 'block';
			document.querySelector(".googlescholar").style.display = 'none';
			document.querySelector(".educationhistory").style.display = 'none';
			document.querySelector(".workhistory").style.display = 'none';
			document.querySelector(".techexpertise").style.display = 'none';
			document.querySelector(".awards").style.display = 'none';
				break;
		    case "Google Scholar":
			document.querySelector(".halloffame").style.display = 'none';
			document.querySelector(".googlescholar").style.display = 'block';
			document.querySelector(".educationhistory").style.display = 'none';
			document.querySelector(".workhistory").style.display = 'none';
			document.querySelector(".techexpertise").style.display = 'none';
			document.querySelector(".awards").style.display = 'none';
				break;
			case "Edu History":
			document.querySelector(".halloffame").style.display = 'none';
			document.querySelector(".googlescholar").style.display = 'none';
			document.querySelector(".educationhistory").style.display = 'block';
			document.querySelector(".workhistory").style.display = 'none';
			document.querySelector(".techexpertise").style.display = 'none';
			document.querySelector(".awards").style.display = 'none';
				break;
			case "Work History":
			document.querySelector(".halloffame").style.display = 'none';
			document.querySelector(".googlescholar").style.display = 'none';
			document.querySelector(".educationhistory").style.display = 'none';
			document.querySelector(".workhistory").style.display = 'block';
			document.querySelector(".techexpertise").style.display = 'none';
			document.querySelector(".awards").style.display = 'none';
				break;
			case "Tech Expertise":
			document.querySelector(".halloffame").style.display = 'none';
			document.querySelector(".googlescholar").style.display = 'none';
			document.querySelector(".educationhistory").style.display = 'none';
			document.querySelector(".workhistory").style.display = 'none';
			document.querySelector(".techexpertise").style.display = 'block';
			document.querySelector(".awards").style.display = 'none';
				break;
			case "Awards":
			document.querySelector(".halloffame").style.display = 'none';
			document.querySelector(".googlescholar").style.display = 'none';
			document.querySelector(".educationhistory").style.display = 'none';
			document.querySelector(".workhistory").style.display = 'none';
			document.querySelector(".techexpertise").style.display = 'none';
			document.querySelector(".awards").style.display = 'block';
				break;
			default:
				break;
		}
	}
