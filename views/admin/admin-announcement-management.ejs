<script>
document.addEventListener('DOMContentLoaded', function () {
    const viewModal = document.getElementById('viewAnnouncementModal');

    viewModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const announcementId = button.getAttribute('data-id');
        const announcementTitle = button.getAttribute('data-title');
        const data = button.getAttribute('data-announcement');
        if (!data) return;

        const announcement = JSON.parse(data);

        // Title
        document.getElementById('viewAnnouncementTitle').textContent = announcement.title || '';

        // Priority badge
        const priorityBadge = document.getElementById('viewPriorityBadge');
        if (Number(announcement.priority) > 0) {
            priorityBadge.style.display = 'inline-block';
        } else {
            priorityBadge.style.display = 'none';
        }

        // Dates
        const postedDate = new Date(announcement.timestamp).toLocaleDateString(undefined, { year: 'numeric', month: 'long', day: 'numeric' });
        let expiresDate = 'No expiry';
        if (announcement.endDate) {
            expiresDate = new Date(announcement.endDate).toLocaleDateString(undefined, { year: 'numeric', month: 'long', day: 'numeric' });
        }
        document.getElementById('viewDates').textContent = `Posted: ${postedDate} | Expires: ${expiresDate}`;

        // Content
        const contentEl = document.getElementById('viewAnnouncementContent');
        try {
            // If stored as Quill Delta JSON
            const delta = JSON.parse(announcement.content);
            if (window.Quill) {
                const tempQuill = new Quill(document.createElement('div'));
                tempQuill.setContents(delta);
                contentEl.innerHTML = tempQuill.root.innerHTML;
            } else {
                // fallback if Quill not loaded
                contentEl.textContent = announcement.content;
            }
        } catch {
            // If already stored as HTML
            contentEl.innerHTML = announcement.contentHTML || announcement.content || '';
        }
    });
});
</script>


