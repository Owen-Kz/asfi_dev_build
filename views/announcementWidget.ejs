    font-weight: bold;
    padding: 2px 6px;
    border-radius: 4px;
}

/* Glowing pulse animation */
@keyframes glowPulse {
    0% {
        box-shadow: 0 0 10px #00e0ff, 0 0 20px #00e0ff;
    }
    50% {
        box-shadow: 0 0 20px #00ffff, 0 0 30px #00ffff;
    }
